<div class="main-content position-relative bg-gray-100 max-height-vh-100 h-100">
	<!-- Navbar -->
	{{>navbar}}
	<!-- End Navbar -->
	<div class="container-fluid px-2 px-md-4">
		<div
			class="page-header min-height-300 border-radius-xl mt-4"
			style="background-image: url('https://picsum.photos/800/300');"
		>
			<span class="mask bg-gradient-info opacity-1"></span>
		</div>
		<form action="/profile" method="POST" enctype="multipart/form-data" class="profileForm gap-3 ">
			<div class="card card-body mx-3 mx-md-4 mt-n6">
				<div class="row gx-4 mb-2">
					<div class="col-auto">
						<div class="avatar avatar-xl position-relative">
							<img
								src="{{userSetting.image}}"
								alt="profile_image"
								class="w-100 border-radius-lg shadow-sm bg-gradient-light p-1"
							/>
						</div>
					</div>
					<div class="col-auto my-auto">
						<div class="h-100">
							<h5 class="mb-1">
								{{user.username}}
							</h5>
							<div class="d-flex gap-2">
								<div class="image-upload">
									<label for="file-input" class="fileUploadLabel">
										<img src="/img/fileUploadIcon.png" alt="" height="25px">
									</label>
									<input id="file-input" type="file" name="userImage" accept="image/*" class="profileFile">
								</div>
								<input type="text" name="userImageURL" class="profileInput" placeholder="URL...">
							</div>
						</div>
					</div>
					<div
						class="col-lg-4 col-md-6 my-sm-auto ms-sm-auto me-sm-0 mx-auto mt-3"
					>
						<div class="nav-wrapper position-relative end-0">
							<ul class="nav nav-pills nav-fill p-1" role="tablist">
								<li class="nav-item">
									<a
										class="tabs nav-link mb-0 px-0 py-1 active"
										data-bs-toggle="tab"
										href="javascript:;"
										type="button"
										onclick="changeSetting(this)"
										id="settings"
									>
										<i class="material-icons text-lg position-relative">settings</i>
										<span class="ms-1">Settings</span>
									</a>
								</li>
								<li class="nav-item">
									<a
										class="tabs nav-link mb-0 px-0 py-1 active"
										data-bs-toggle="tab"
										href="javascript:;"
										type="button"
										onclick="changeSetting(this)"
										id="profile"
									>
										<i class="material-icons text-lg position-relative">person</i>
										<span class="ms-1">Profile</span>
									</a>
								</li>
								<li class="nav-item">
									<a
										class="tabs nav-link mb-0 px-0 py-1 text-danger active"
										data-bs-toggle="tab"
										href="javascript:;"
										type="button"
										onclick="changeSetting(this)"
										id="danger"
									>
										<i class="fas fa-warning position-relative"></i>
										<span class="ms-1">Danger</span>
									</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
				<div class="row mb-5">
					<div class="row">
						<div class="tabContents col-12 col-xl-12" id="settings">
							<div class="card card-plain h-100">
								<div class="card-header pb-0 p-3">
									<div class="row">
										<div class="col-md-8 d-flex align-items-center">
											<h4 class="mb-0">User Settings</h4>
										</div>
										<div class="col-md-4 text-end">
											<a href="javascript:;">
												<i
													class="fas fa-user-edit text-secondary text-sm"
													data-bs-toggle="tooltip"
													data-bs-placement="top"
													title="Edit Profile"
												></i>
											</a>
										</div>
									</div>
								</div>
								<div class="card-body p-3">	
										<div class="row">
											<div class="col-12 col-xl-6">
												<div class="mb-3 d-block">
													<h6 class="text-info m-0">Full Name</h6>
													<input type="text" class="profileInput" name="fullName" value="{{userSetting.fullName}}" placeholder="Full Name"/>
												</div>
												<div class="mb-3 d-block">
													<h6 class="text-info m-0">Gender</h6>
													<select name="gender" class="form-select profileSelect" aria-label="Default select example">
														<option value="male" 
															{{#ifequal userSetting.gender 'male' }} selected {{/ifequal}}
														>Male</option>
														<option value="female"
															{{#ifequal userSetting.gender 'female' }} selected {{/ifequal}}
														>Female</option>
													</select>
												</div>
												<div class="mb-3 d-block">
													<h6 class="text-info m-0">Mobile Phone</h6>
													<input type="number" class="profileInput" name="mobilePhone" value="{{userSetting.mobilePhone}}" placeholder="Phone Number"/>
												</div>
												<div class="mb-3 d-block">
													<h6 class="text-info m-0">Location</h6>
													<input type="text" class="profileInput" name="location" value="{{userSetting.location}}" placeholder="Location"/>
												</div>
											</div>
											<div class="col-12 col-xl-6">
												<div class="mb-3 d-block">
													<h6 class="text-info m-0">BIO</h6>
													<textarea type="text" class="profileTextarea w-100" name="description" placeholder="Full Name"/>{{userSetting.description}}</textarea>
												</div>
											</div>
										</div>
										<button class="btn bg-gradient-info w-25 mb-0 toast-btn" type="submit" data-target="infoToast">SAVE</button>
								</div>
							</div>
						</div>
						<div class="tabContents col-12 col-xl-12 d-none" id="profile">
							<div class="card card-plain h-100">
								<div class="card-header pb-0 p-3">
									<div class="row">
										<div class="col-md-8 d-flex align-items-center">
											<h4 class="mb-0">Social Links</h4>
										</div>
										<div class="col-md-4 text-end">
											<a href="javascript:;">
												<i
													class="fas fa-user-edit text-secondary text-sm"
													data-bs-toggle="tooltip"
													data-bs-placement="top"
													title="Edit Profile"
												></i>
											</a>
										</div>
									</div>
								</div>
								<div class="card-body p-3">	
										<div class="row">
											<div class="col-12 col-xl-6">
												<div class="mb-3 d-block">
													<h6 class="text-info m-0">Telegram</h6>
													<input type="text" class="profileInput" name="fullName" value="{{userSetting.telegramLink}}" placeholder="Telegram profile"/>
												</div>
											</div>
											<div class="col-12 col-xl-6">
												<div class="mb-3 d-block">
													<h6 class="text-info m-0">Instagram</h6>
													<input type="text" class="profileInput" name="fullName" value="{{userSetting.instagramLink}}" placeholder="Instagram profile"/>
												</div>
											</div>
											<div class="col-12 col-xl-6">
												<div class="mb-3 d-block">
													<h6 class="text-info m-0">Facebook</h6>
													<input type="text" class="profileInput" name="fullName" value="{{userSetting.fullName}}" placeholder="Facebook profile"/>
												</div>
											</div>
											<div class="col-12 col-xl-6">
												<div class="mb-3 d-block">
													<h6 class="text-info m-0">Website</h6>
													<input type="text" class="profileInput" name="fullName" value="{{userSetting.fullName}}" placeholder="Website"/>
												</div>
											</div>
										</div>
										<button class="btn bg-gradient-info w-25 mb-0 toast-btn" type="submit" data-target="infoToast">SAVE</button>
								</div>
							</div>
						</div>
						<div class="tabContents col-12 col-xl-12 d-none" id="danger">
							<div class="card card-plain h-100">
								<div class="card-header pb-0 p-3">
									<div class="row">
										<div class="col-md-8 d-flex align-items-center">
											<h4 class="mb-0">Profile Information</h4>
										</div>
										<div class="col-md-4 text-end">
											<a href="javascript:;">
												<i
													class="fas fa-user-edit text-secondary text-sm"
													data-bs-toggle="tooltip"
													data-bs-placement="top"
													title="Edit Profile"
												></i>
											</a>
										</div>
									</div>
								</div>
								<div class="card-body p-3">	
										<div class="row">
											<div class="col-12 col-xl-6">
												<div class="mb-3 d-block">
													<h6 class="text-info m-0">Full Name</h6>
													<input type="text" class="profileInput" name="fullName" value="{{userSetting.fullName}}" placeholder="Full Name"/>
												</div>
												<div class="mb-3 d-block">
													<h6 class="text-info m-0">Gender</h6>
													<select name="gender" class="form-select profileSelect" aria-label="Default select example">
														<option value="male" 
															{{#ifequal userSetting.gender 'male' }} selected {{/ifequal}}
														>Male</option>
														<option value="female"
															{{#ifequal userSetting.gender 'female' }} selected {{/ifequal}}
														>Female</option>
													</select>
												</div>
												<div class="mb-3 d-block">
													<h6 class="text-info m-0">Mobile Phone</h6>
													<input type="number" class="profileInput" name="mobilePhone" value="{{userSetting.mobilePhone}}" placeholder="Phone Number"/>
												</div>
												<div class="mb-3 d-block">
													<h6 class="text-info m-0">Location</h6>
													<input type="text" class="profileInput" name="location" value="{{userSetting.location}}" placeholder="Location"/>
												</div>
											</div>
											<div class="col-12 col-xl-6">
												<div class="mb-3 d-block">
													<h6 class="text-info m-0">BIO</h6>
													<textarea type="text" class="profileTextarea w-100" name="description" placeholder="Full Name"/>{{userSetting.description}}</textarea>
												</div>
											</div>
										</div>
										<button class="btn bg-gradient-info w-25 mb-0 toast-btn" type="submit" data-target="infoToast">SAVE</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
